/*
  # Force HTTPS only.
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  # Load scripts only via HTTPS and from allowed domains.
  Content-Security-Policy: default-src 'self';
  Content-Security-Policy: style-src 'self' 'unsafe-inline';
  Content-Security-Policy: font-src 'self' https://fonts.gstatic.com;
  Content-Security-Policy: script-src 'self' 'unsafe-inline';
  Content-Security-Policy: object-src 'none'; frame-ancestors 'none';Content-Security-Policy: require-trusted-types-for 'script';

  # Add reflective XSS protection.
  X-XSS-Protection: 1; mode=block
  # We don't use iframes. Block them.
  X-Frame-Options: DENY
  # Don't allow Mime-sniffing.
  X-Content-Type-Options: nosniff
  # Don't use referrer.
  Referrer-Policy: no-referrer
  # Configure feature usage.
  Feature-Policy: camera 'none';
  Feature-Policy: geolocation 'none';
  Feature-Policy: microphone 'none';
  Feature-Policy: push 'none';
  Feature-Policy: vibrate 'none';
